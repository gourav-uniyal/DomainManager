<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:elevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_right"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_alignBaseline="@+id/lbl_domain_name"
                    />

                <TextView
                    android:id="@+id/lbl_domain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/laila"
                    android:text="http://www.apple.com"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/lbl_serial_number"
                    android:textStyle="bold" />

            </RelativeLayout>


            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/laila"
                android:text="Steve Jobs"
                android:textColor="@color/colorDimgrey"
                android:textSize="12sp" />

            <!--<TextView
                android:id="@+id/lbl_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/laila"
                android:text="New York"
                android:textColor="@color/colorDimgrey"
                android:textSize="12sp"
                android:textStyle="bold" />-->

            <!--<TextView
                android:id="@+id/lbl_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/laila"
                android:text="Phone Number"
                android:textColor="@color/colorDimgrey"
                android:textSize="12sp"
                android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_phone_in_talk_green_24dp" />

            <ImageView
                android:id="@+id/imageView_whatsapp_message"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@mipmap/whatsapp_icon" />

            <ImageView
                android:id="@+id/imageView_text_message"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@mipmap/imageedit_20_4681021453" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>